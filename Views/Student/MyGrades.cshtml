@model List<Grades>

@{
    ViewData["Title"] = "My Grades";
}

<h1 class="float-left">My Grades</h1>
<h1 class="float-right">Total Grade: @ViewBag.CurrentStudent.AverageGrade</h1>

<table class="table-bordered-space table-space">
    <tr>
        <th class="text-center">Quiz Number</th>
        <th class="text-center">Quiz Name</th>
        <th class="text-center">Grade</th>
    </tr>
    @{ int count = 1;}
    @foreach (Grades g in Model)
    {
        <tr>
            <td class="text-center">@count</td>
            <td class="text-center">@g.Quiz.QuizType</td>
            <td class="text-center">@g.Grade</td>
        </tr>
        count++;
    }
</table>