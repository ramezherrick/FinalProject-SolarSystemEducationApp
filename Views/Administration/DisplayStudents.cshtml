
@{
    ViewData["Title"] = "DisplayStudents";
}

<h1>DisplayStudents</h1>
@model PrincipleViewModel
<table class="table table-bordered">
    <tr>
        <th>Student Name</th>
        <th>Remove Student</th>
    </tr>
   

        @foreach (Students s in Model.students)
        {
            <tr>
                <td>
                        @s.FirstName @s.LastName <br />
                </td>
                <td><a class="btn btn-primary" href="../Administration/DeleteStudent?id=@s.Id">Delete student</a></td>
                
            </tr>
        }

  
    </table>