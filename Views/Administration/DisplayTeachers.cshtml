
@{
    ViewData["Title"] = "DisplayTeachers";
}


<h1>DisplayTeachers</h1>
@model List<Teachers>
<table class="table table-bordered">
    <tr>
        <th>Teachers</th>
        <th>Remove Teacher</th>
    </tr>
    @foreach (Teachers t in Model)
    {
        <tr>
            <td>@t.FirstName @t.LastName</td>
            <td><a class="btn btn-primary" href="../Administration/DeleteTeacher?id=@t.Id">Remove Teacher</a></td>
        </tr>
    }

</table>

