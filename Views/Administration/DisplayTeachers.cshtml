
@{
    ViewData["Title"] = "DisplayTeachers";
}


<h1>Display Teachers</h1><br />
@model List<Teachers>
<table class="table-space table-bordered-space">
    <tr>
        <th>Teachers</th>
        <th>Remove Teacher</th>
    </tr>
    @foreach (Teachers t in Model)
    {
        <tr>
            <td>@t.FirstName @t.LastName</td>
            <td><a class="btn btn-primary btn-sm regularText" onclick="return myFunction()" href="../Administration/DeleteTeacher?id=@t.Id">Remove Teacher</a></td>
        </tr>
    }

</table>

<script>
    function myFunction() {
        if (confirm("Are you sure you want to delete this item?")) {
            return true;
        }
        else {
            return false;
        }
    }
</script>