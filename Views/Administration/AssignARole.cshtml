
@{
    ViewData["Title"] = "AssignARole";
}

<h1>New User Initiation</h1>
@model List<AspNetRoles>

<h1 style="color:firebrick">@ViewBag.ErrorMessage</h1>
<form action="../Administration/AssignARole" method="post">
    <p>
        First Name<br />
        <input type="text" name="FirstName" required pattern="[A-Za-z]{2,15}"/>
    </p>

    <p>
        Last Name<br />
        <input type="text" name="LastName" required pattern="[A-Za-z]{2,15}"/>
    </p>

    <p>
        Who are you registering as?<br />
        <select name="role">
            @foreach (AspNetRoles roles in Model)
            {
                <option value="@roles.Name">@roles.Name </option>
            }
        </select>
    </p>

    <p>
        Password (For Teacher/Admin ONLY)<br />
        <input type="password" name="password" />
    </p>

    <p>
        Select a classroom (Student ONLY)<br />
        <select name="ClassroomId">
            @foreach (Classrooms c in ViewBag.classrooms)
            {
                <option value="@c.Id">@c.ClassName</option>
            }
        </select>
    </p>
    <input type="submit" />
</form>

