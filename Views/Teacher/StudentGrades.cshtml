@model List<Grades>

@{
    ViewData["Title"] = "StudentGrades";
}

<h1 class="float-left">All Grades for: @ViewBag.CurrentStudent.FirstName @ViewBag.CurrentStudent.LastName</h1>

<h1 class="float-right">Total Grade: @ViewBag.CurrentStudent.AverageGrade</h1>

<table class="table table-bordered">
    <tr>
        <th>Quiz Number</th>
        <th>Quiz Name</th>
        <th>Grade</th>
    </tr>
    @{ int count = 1;}
    @foreach (Grades g in Model)
    {
        <tr>
            <td>@count</td>
            <td>@g.Quiz.QuizType</td>
            <td>@g.Grade</td>
        </tr>
        count++;
    }
</table>